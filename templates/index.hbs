<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Catcher</title>
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="css/main.css">
</head>
<body>
    <section class="content">
      <input class="rss-input" type="text" name="podcast" value="" />
      <input type="submit" class="add-feed" value="Get Feed">

      <ul id="shows">
        {{#if shows}}
          {{#each shows}}
            <li>
              <h2>{{title}}</h2>
              <span class="remove" data-id="{{title}}">Remove</span>
              <ul>
                {{#each episodes}}
                  <li>
                    <h3>{{title}}:</h3>
                    {{#each links}}
                      <audio src="{{href}}" controls>
                        Your browser does not support the <code>audio</code> element.
                      </audio>
                    {{/each}}
                  </li>
                {{/each}}
              </ul>
            </li>
          {{/each}}
        {{else}}
          <p class="empty"><em>Unbelievable.  No entries here so far</p>
        {{/if}}
      </ul>
    </section>
    <script src="app/main.js" type="text/javascript"></script>
</body>
</html>
